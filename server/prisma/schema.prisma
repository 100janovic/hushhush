generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  Group    Group[]
  Secret   Secret[]
}

model Group {
  id       String   @id @default(cuid())
  name     String
  userId   String
  isPublic Boolean  @default(false)
  user     User     @relation(fields: [userId], references: [id])
  Secret   Secret[]
}

model Secret {
  id      String  @id @default(cuid())
  slug    String
  value   String
  userId  String
  groupId String?
  group   Group?  @relation(fields: [groupId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}
